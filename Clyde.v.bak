module Clyde #(speed = 1, boundary_x0 = 0, boundary_x1 = 620, boundary_y0 = 0, boundary_y1 = 460)

input [1:0] mode; // chase, frighten, dead
inout reg [$clog2(`WIDTH) - 1:0] x;
inout reg [$clog2(`HEIGHT) - 1:0] y;
inout reg [1:0] ghostDirection;
inout reg [1:0] playerDirection;
inout reg [$clog2(`WIDTH) - 1:0] player_x;
inout reg [$clog2(`HEIGHT) - 1:0] player_y;

localparam Chase = 2'b 00,
           Frighten = 2'b 01,
           Dead = 2'b 10;


always @(posedge mode or posedge w or posedge a or posedge s or posedge d) begin

    // 1. determine player's direction
    if (w) begin
        playerDirection <= `dir_up;
    end else if (a) begin
        playerDirection <= `dir_left;
    end else if (s) begin
        playerDirection <= `dir_down;
    end else if (d) begin
        playerDirection <= `dir_right;
    end
    
    // 2. determine ghost's direction
    if (mode == Chase) begin

        case (playerDirection)
            LEFT:
                if (/*鬼往左加一格不是牆壁*/) begin
                    ghostDirection <= `dir_left;
                end else if (/*鬼往下加一格不是牆壁*/) begin
                    ghostDirection <= `dir_down;
                end else if (/*鬼往上加一格不是牆壁*/) begin
                    ghostDirection <= `dir_up;
                end else begin
                    ghostDirection <= `dir_right;
                end
            RIGHT:
                if (/*鬼往右加一格不是牆壁*/) begin
                    ghostDirection <= `dir_right;
                end else if (/*鬼往下加一格不是牆壁*/) begin
                    ghostDirection <= `dir_down;
                end else if (/*鬼往上加一格不是牆壁*/) begin
                    ghostDirection <= `dir_up;
                end else begin
                    ghostDirection <= `dir_left;
                end
            UP:
                if (/*鬼往上加一格不是牆壁*/) begin
                    ghostDirection <= `dir_up;
                end else if (/*鬼往右加一格不是牆壁*/) begin
                    ghostDirection <= `dir_right;
                end else if (/*鬼往左加一格不是牆壁*/) begin
                    ghostDirection <= `dir_left;
                end else begin
                    ghostDirection <= `dir_down;
                end
            DOWN:
                if (/*鬼往下加一格不是牆壁*/) begin
                    ghostDirection <= `dir_down;
                end else if (/*鬼往左加一格不是牆壁*/) begin
                    ghostDirection <= `dir_left;
                end else if (/*鬼往右加一格不是牆壁*/) begin
                    ghostDirection <= `dir_right;
                end else begin
                    ghostDirection <= `dir_up;
                end
        endcase

    end else if (mode == Frighten) begin

        case (playerDirection)
            LEFT:
                if (/*鬼往左加一格不是牆壁*/) begin
                    ghostDirection <= `dir_left;
                end else if (/*鬼往下加一格不是牆壁*/) begin
                    ghostDirection <= `dir_down;
                end else if (/*鬼往上加一格不是牆壁*/) begin
                    ghostDirection <= `dir_up;
                end else begin
                    ghostDirection <= `dir_right;
                end
            RIGHT:
                if (/*鬼往右加一格不是牆壁*/) begin
                    ghostDirection <= `dir_right;
                end else if (/*鬼往下加一格不是牆壁*/) begin
                    ghostDirection <= `dir_down;
                end else if (/*鬼往上加一格不是牆壁*/) begin
                    ghostDirection <= `dir_up;
                end else begin
                    ghostDirection <= `dir_left;
                end
            UP:
                if (/*鬼往上加一格不是牆壁*/) begin
                    ghostDirection <= `dir_up;
                end else if (/*鬼往右加一格不是牆壁*/) begin
                    ghostDirection <= `dir_right;
                end else if (/*鬼往左加一格不是牆壁*/) begin
                    ghostDirection <= `dir_left;
                end else begin
                    ghostDirection <= `dir_down;
                end
            DOWN:
                if (/*鬼往下加一格不是牆壁*/) begin
                    ghostDirection <= `dir_down;
                end else if (/*鬼往左加一格不是牆壁*/) begin
                    ghostDirection <= `dir_left;
                end else if (/*鬼往右加一格不是牆壁*/) begin
                    ghostDirection <= `dir_right;
                end else begin
                    ghostDirection <= `dir_up;
                end
        endcase

    end else begin
        ghostDirection <= `dir_no;
    end

    // 3. move ghost toward the direction
    if (ghostDirection == `dir_no) begin

        x <= 310;
        y <= 230;

    end else if (ghostDirection == `dir_up) begin

        x <= x;
        if ((y - speed) <= boundary_y0) y <= boundary_y0;
        else if ((y - speed) >= boundary_y1) y <= y;
        else y <= y - speed;

    end else if (ghostDirection == `dir_down) begin

        x <= x;
        if ((y + speed) >= boundary_y1) y <= boundary_y1;
        else if ((y + speed) <= boundary_y0) y <= y;
        else y <= y + speed;

    end else if (ghostDirection == `dir_left) begin

        y <= y;
        if((x - speed) <= boundary_x0) x <= boundary_x0;
        else if((x - speed) >= boundary_x1) x <= x;
        else x <= x - speed;

    end else begin
        
        y <= y;
        if((x + speed) >= boundary_x1) x <= boundary_x1;
        else if((x + speed) <= boundary_x0) x <= x;
        else x <= x + speed;

    end

    // 4. collision check
    if ((x == player_x) && (y == player_y)) begin
        if (mode == Chase) begin
            // game over
        end else if (mode == Frighten) begin
            mode <= Dead;
        end else begin
            // nothing happen and should be avoided
        end
    end
end

endmodule